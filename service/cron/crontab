#!/bin/sh

exec 2>&1
realpath "$0"
set -ex
if [ -n "$PG_AUTOCTL" ] && [ "$(pg_autoctl config get pg_autoctl.role)" = "monitor" ]; then
    cat >".crontab" <<EOF
0   0   *   *   *  /etc/service/cron/full
0   1-23   *   *   *  /etc/service/cron/incremental
EOF
else
    cat >".crontab" <<EOF
0   0   *   *   *  /etc/service/cron/dump
EOF
fi
